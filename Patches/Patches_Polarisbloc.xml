<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!--vanya.polarisbloc.mechenemy-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Polarisbloc - Mechenemy</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName = "WeaponsNotBasic"]/weaponTags</xpath>
      <value>
        <li>MTVMelee</li>
        <li>MTVCARifle</li>
        <li>MTVCASniper</li>
        <li>MTVCARocket</li>
        <li>MTVGrenade</li>
        <li>MTVMelee</li>
        <li>MTVMechGunA</li>
        <li>MTVMechGunB</li>
        <li>MTVMechGunC</li>
        <li>MTVMechGunD</li>
        <li>MTVMechSniper</li>
        <li>MTVMechRocket</li>
        <li>MTVMelee</li>
        <li>MTVGrenade</li>
      </value>
    </match>
  </Operation>
  
  <!--vanya.polarisbloc.securityforce-->
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Polarisbloc - Security Force</li>
    </mods>
    <match Class="PatchOperationAdd">
      <xpath>Defs/ThingDef[defName = "WeaponsNotBasic"]/weaponTags</xpath>
      <value>
        <li>Polarisbloc_CaniculaRifle</li>
        <li>Polarisbloc_CaniculaSniper</li>
      </value>
    </match>
  </Operation>
  
</Patch>