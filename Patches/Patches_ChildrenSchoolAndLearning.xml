<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!--Children, school and learning-->
  <Operation Class="JPTools.PatchOperationFindModById">
    <mods>
      <li>dylan.csl</li>
		</mods>
		<match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/WorkGiverDef/workType[.="HR_Learn"]</xpath>
          <value>
            <workType>Study</workType>
          </value>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>/Defs/RecipeDef/requiredGiverWorkType[.="HR_Learn"]</xpath>
          <value>
            <requiredGiverWorkType>Study</requiredGiverWorkType>
          </value>
        </li>
      </operations>
		</match>
	</Operation>
</Patch>