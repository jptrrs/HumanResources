<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<!--Vanilla Factions Expanded - Settlers-->
	<Operation Class="JPTools.PatchOperationFindModById">
		<mods>
			<li>OskarPotocki.VanillaFactionsExpanded.SettlersModule</li>
		</mods>
		<match Class="PatchOperationAdd">
			<xpath>Defs/ScenarioDef[defName = "VFES_Bandits"]/scenario/parts</xpath>
			<value>
				<li Class="ScenPart_Rule_DisallowDesignator">
					<def>Rule_knowAllStartingWeapons</def>
				</li>
			</value>
		</match>
	</Operation>
</Patch>